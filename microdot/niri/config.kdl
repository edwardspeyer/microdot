// vim: ts=4:sw=4

environment {
  XDG_CURRENT_DESKTOP "niri"
  XDG_SESSION_TYPE "wayland"
  QT_QPA_PLATFORM "wayland"
}


hotkey-overlay { skip-at-startup; }
cursor { hide-when-typing; }
animations { slowdown 0.7;  /* <1 = faster  */ }
overview { zoom 0.4; }
spawn-at-startup "waybar"
spawn-at-startup "swaybg" "--mode=fill" "-i" "Pictures/Backgrounds/bg"
// prefer-no-csd
screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"


input {
    keyboard {
        xkb {
            options "compose:ralt"
        }
    }

    touchpad {
        tap
        drag true
        drag-lock
        natural-scroll
        scroll-method "two-finger"
        disabled-on-external-mouse
    }

    warp-mouse-to-focus // warp to the center of focused windows
    focus-follows-mouse
    disable-power-key-handling
}

switch-events {
    lid-close { spawn "sh" "-c" "exec $MICRODOT_INSTALL_PATH/microdot/sway/lock"; }
}


// TODO move to local config files once the next Niri release ships (which includes `include`.)

output "AU Optronics 0x5B2D Unknown" {
    // Native resolution    : 1920 x 1080 
    scale 1.35  // scaled   : 1422 x  800
    position x=250 y=1080;
}

output "LG Electronics LG HDR 4K 212MAGPBV175" {
    // Native resolution    : 3840 x 2160
    scale 2.00  // scaled   : 1920 x 1080
}

output "LG Electronics LG HDR 4K 301MAHUKQW29" {
    scale 2.00
}


layout {
    gaps 15
    center-focused-column "never"
    focus-ring { off; }
    border { off; }
    empty-workspace-above-first  // [EW]

    preset-column-widths {
        proportion 1.00
        proportion 0.70
        proportion 0.50
        proportion 0.30
    }

    preset-window-heights   { proportion 0.50; proportion 1.00; }
    default-column-width    { proportion 0.50; }
    shadow {
        on
        draw-behind-window true
        offset x=5 y=5
    }
}


window-rule {
    geometry-corner-radius 8
    clip-to-geometry true
}


window-rule {
    match app-id="pavucontrol"
    default-column-width { proportion 0.45; }
}

window-rule {
    match app-id="geary"
    default-column-width { proportion 1.00; }
}


binds {
    Mod+Shift+Slash { show-hotkey-overlay; }

    Mod+Return  { spawn "foot"; }
    Mod+Space   { spawn "sh" "-c" "exec $MICRODOT_INSTALL_PATH/microdot/niri/menu"; }
    Mod+L       { spawn "sh" "-c" "exec $MICRODOT_INSTALL_PATH/microdot/sway/lock"; }

    XF86AudioRaiseVolume allow-when-locked=true { spawn "pactl" "set-sink-volume" "@DEFAULT_SINK@" "+5%"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "pactl" "set-sink-volume" "@DEFAULT_SINK@" "-5%"; }
    XF86AudioMute        allow-when-locked=true { spawn "pactl" "set-sink-mute"   "@DEFAULT_SINK@" "toggle"; }
    //XF86AudioMicMute     allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
    
    XF86MonBrightnessUp   { spawn "brightnessctl" "set" "10%+"; }
    XF86MonBrightnessDown { spawn "brightnessctl" "set" "10%-"; }

    Mod+Tab repeat=false { toggle-overview; }
    Mod+W { close-window; }

    Mod+Left  { focus-column-left; }
    Mod+Down  { focus-window-or-workspace-down; }
    Mod+Up    { focus-window-or-workspace-up; }
    Mod+Right { focus-column-right; }

    Mod+Shift+Left  { consume-or-expel-window-left; }
    Mod+Shift+Right { consume-or-expel-window-right; }
    Mod+Shift+Up    { move-window-up-or-to-workspace-up; }
    Mod+Shift+Down  { move-window-down-or-to-workspace-down; }

    Mod+Comma  { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }

    Mod+Home { focus-column-first; }
    Mod+End  { focus-column-last; }
    Mod+Ctrl+Home { move-column-to-first; }
    Mod+Ctrl+End  { move-column-to-last; }

    Mod+Ctrl+Left  { focus-monitor-left; }
    Mod+Ctrl+Down  { focus-monitor-down; }
    Mod+Ctrl+Up    { focus-monitor-up; }
    Mod+Ctrl+Right { focus-monitor-right; }

    Mod+Shift+Ctrl+Left  { move-column-to-monitor-left; }
    Mod+Shift+Ctrl+Down  { move-column-to-monitor-down; }
    Mod+Shift+Ctrl+Up    { move-column-to-monitor-up; }
    Mod+Shift+Ctrl+Right { move-column-to-monitor-right; }

    Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    Mod+WheelScrollRight      { focus-column-right; }
    Mod+WheelScrollLeft       { focus-column-left; }
    Mod+Ctrl+WheelScrollRight { move-column-right; }
    Mod+Ctrl+WheelScrollLeft  { move-column-left; }

    Mod+Shift+WheelScrollDown      { focus-column-right; }
    Mod+Shift+WheelScrollUp        { focus-column-left; }
    Mod+Ctrl+Shift+WheelScrollDown { move-column-right; }
    Mod+Ctrl+Shift+WheelScrollUp   { move-column-left; }

    // See [EW] above.  These use the "always before first" empty
    // workspace.
    Mod+grave { focus-workspace 1; }
    Mod+Shift+grave { move-column-to-workspace 1; }

    // Everything else is shifted across by +1.
    Mod+1 { focus-workspace 2; }
    Mod+2 { focus-workspace 3; }
    Mod+3 { focus-workspace 4; }
    Mod+4 { focus-workspace 5; }
    Mod+5 { focus-workspace 6; }
    Mod+6 { focus-workspace 7; }
    Mod+7 { focus-workspace 8; }
    Mod+8 { focus-workspace 9; }

    Mod+Shift+1 { move-column-to-workspace 2; }
    Mod+Shift+2 { move-column-to-workspace 3; }
    Mod+Shift+3 { move-column-to-workspace 4; }
    Mod+Shift+4 { move-column-to-workspace 5; }
    Mod+Shift+5 { move-column-to-workspace 6; }
    Mod+Shift+6 { move-column-to-workspace 7; }
    Mod+Shift+7 { move-column-to-workspace 8; }
    Mod+Shift+8 { move-column-to-workspace 9; }

    Mod+R { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+F { fullscreen-window; }

    Mod+X { expand-column-to-available-width; }
    Mod+C { center-column; }

    Mod+Shift+Minus { set-column-width "-10%"; }
    Mod+Shift+Equal { set-column-width "+10%"; }
    Mod+Minus { set-window-height "-10%"; }
    Mod+Equal { set-window-height "+10%"; }

    Mod+V       { toggle-window-floating; }
    Mod+Shift+V { switch-focus-between-floating-and-tiling; }

    Print { screenshot; }
    Ctrl+Print { screenshot-screen; }
    Alt+Print { screenshot-window; }
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    Mod+Shift+P { power-off-monitors; }
}
