from microdot import BASE, install_hook

install_hook(
    "~/.config/fish/conf.d/microdot.fish",
    f"""\
    for file in {BASE}/fish/*.fish
        source $file
    end
    """,
)

install_hook(
    "~/.config/fish/fish_variables",
    (BASE / "fish/fish_variables").read_text(),
    position="bottom",
)
