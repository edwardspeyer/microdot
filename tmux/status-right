#!/bin/bash

pane_current_path="$1"

lo="#[fg=#284747]"
hi="#[fg=#28a7a7]"

echo -n "${lo}${RUNTIME_HOSTNAME:-$HOSTNAME}/"

if [ "$pane_current_path" = "$HOME" ]
then
  dir="~"
else
  dir="$(basename "$pane_current_path")"
fi

echo -n "${hi}$dir"

branch=$(cd "$pane_current_path" && git rev-parse --abbrev-ref HEAD)
if [ "$branch" ]
then
  echo "  âŽ‡ ${branch}"
fi
